QTabWidget::pane {
    border: 2px solid #444444;
    border-radius: 8px;
    background: #1A1A1A;
}

QTabBar::tab {
    background: #2A2A2A;
    color: #AAAAAA;
    padding: 8px 16px;
    border: 1px solid #444444;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    min-width: 100px;
}

QTabBar::tab:hover {
    background: rgba(251, 114, 153, 0.1);
    color: #FFFFFF;
}

QTabBar::tab:selected {
    background: #FB7299;
    color: #FFFFFF;
    font-weight: bold;
}

QTabBar::tab:!selected {
    margin-top: 3px;
}

